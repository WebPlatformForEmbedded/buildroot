config BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_MODULE
	bool "widevine"
	select BR2_PACKAGE_WPEFRAMEWORK_PLUGINS
	select BR2_PACKAGE_WPEFRAMEWORK_CDM
        select BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE           if  BR2_PACKAGE_WPEFRAMEWORK_CDMI_SOFTWARE_OVERRIDE
        select BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_NEXUS_SVP if !BR2_PACKAGE_WPEFRAMEWORK_CDMI_SOFTWARE_OVERRIDE && BR2_PACKAGE_HAS_NEXUS_SAGE
	help
	  Widevine

config BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE
    bool
    select BR2_PACKAGE_WIDEVINE

config BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_NEXUS_SVP
    bool

choice BR2_PACKAGE_BCM_REFSW_SAGE_WIDEVINE_VERSION
    prompt "Version"
    depends on BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_NEXUS_SVP
    default BR2_PACKAGE_BCM_REFSW_SAGE_WIDEVINE_VERSION_14

config BR2_PACKAGE_BCM_REFSW_SAGE_WIDEVINE_VERSION_14
    bool "14"

config BR2_PACKAGE_BCM_REFSW_SAGE_WIDEVINE_VERSION_15
    bool "15"

endchoice

config BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_DEVICE_CERTIFICATE
    string "Device certificate"
    depends on BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_MODULE
    default ""
    help
        Widevine device certificate used during the provisioning process.
           
config BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_PRODUCT_NAME
    string "Product name"
    depends on BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_MODULE
    default ""
    help
        Widevine product name used during the provisioning process.
        
config BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_COMPANY_NAME
    string "Company name"
    depends on BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_MODULE
    default ""
    help
        Widevine company name used during the provisioning process.
        
config BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_MODEL_NAME
    string "Model name"
    depends on BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_MODULE
    default ""
    help
        Widevine model name used during the provisioning process.
        
config BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_DEVICE_NAME
    string "Device name"
    depends on BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_MODULE
    default ""
    help
        Widevine device name used during the provisioning process.        

config BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE_KEYBOX
    string "Keybox"
    default ""
    depends on BR2_PACKAGE_WPEFRAMEWORK_CDMI_WIDEVINE
    help
        Widevine keybox used for signing license acquistion requests, \
        during software based decryption. 
