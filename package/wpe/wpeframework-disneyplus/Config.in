menuconfig BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS
    bool "DisneyPlus"
    depends on BR2_PACKAGE_DISNEY
    help
        WPE Platform DisneyPlus plugin

if BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_DISNEYPLUS_AUTOSTART
    depends on BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS
    bool "autostart"
    default n

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_DISNEYPLUS_DEVICE
    depends on BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS
    string "device"
    default "Metrological"

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_DISNEYPLUS_VENDOR
    depends on BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS
    string "vendor"
    default "Metrological"

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_DISNEYPLUS_REGION
    depends on BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS
    string "region"
    default "US"

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_DISNEYPLUS_LANGUAGE
    depends on BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS
    string "language"
    default "en"

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_DISNEYPLUS_ADVERTISING_ID
    depends on BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS
    string "advertising id"
    default ""

choice BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS_GRAPHICS_MODE
    default BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS_GRAPHICS_MODE_720P
    prompt "graphics mode"
    help
      Select disneyplus output graphics mode

config BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS_GRAPHICS_MODE_720P
    bool "720p"
    help
      720p (HD Ready)

config BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS_GRAPHICS_MODE_1080P
    bool "1080p"
    help
      1080p (Full HD)

config BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS_GRAPHICS_MODE_2160P
    bool "2160p"
    help
      2160p (4k)

endchoice

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_DISNEYPLUS_VIDEO_MEMORY
    depends on BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS
    int "video memory"
    range 0 360
    default 256

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_DISNEYPLUS_PERSONA_ID
    depends on BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS
    string "persona ID"
    default ""

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_DISNEYPLUS_STACK_SIZE
    depends on BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS
    int "ADK stack size"
    default 0
    help
      Set stack size for the thread running ADK (0 will use the default value specified in the Thunder Core)

choice BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS_MAX_VIDEO_RESOLUTION
    default BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS_MAX_VIDEO_RESOLUTION_1080P60
    prompt "Max video resolution"
    help
      Select max decoder resolution

config BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS_MAX_VIDEO_RESOLUTION_SD
    bool "SD"
    help
      SD resolution

config BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS_MAX_VIDEO_RESOLUTION_720P60
    bool "720p60"
    help
      720p@60Hz

config BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS_MAX_VIDEO_RESOLUTION_1080P60
    bool "1080p60"
    help
      1080p@60Hz

config BR2_PACKAGE_WPEFRAMEWORK_DISNEYPLUS_MAX_VIDEO_RESOLUTION_2160P60
    bool "2160p60"
    help
      2160p@60Hz

endchoice

menu "Audio codecs"
    config PLUGIN_DISNEYPLUS_AUDIO_CODECS_AAC
    bool "AAC"
    default y
    help
        AAC codec

    config PLUGIN_DISNEYPLUS_AUDIO_CODECS_AC3
    bool "AC3"
    default n
    help
        AC3 codec

    config PLUGIN_DISNEYPLUS_AUDIO_CODECS_EAC3
    bool "EAC3"
    default n
    help
        EAC3 codec

    config PLUGIN_DISNEYPLUS_AUDIO_CODECS_ATMOS
    bool "Atmos"
    default n
    help
        Atmos codec

endmenu

menu "Video profiles"
    config PLUGIN_DISNEYPLUS_VIDEO_PROFILE_H264_MAIN
    bool "H264 Main"
    default y
    help
        H264 main profile

    config PLUGIN_DISNEYPLUS_VIDEO_PROFILE_H264_HIGH
    bool "H264 High"
    default y
    help
        H264 high profile

    config PLUGIN_DISNEYPLUS_VIDEO_PROFILE_HEVC_MAIN
    bool "HEVC main"
    default n
    help
        HEVC main

    config PLUGIN_DISNEYPLUS_VIDEO_PROFILE_HEVC_MAIN_10
    bool "HEVC main 10"
    default n
    help
        HEVC main 10


endmenu

endif
comment "DisneyPlus is dependent on the DisneyPlus-ADK package"
    depends on !BR2_PACKAGE_DISNEY
